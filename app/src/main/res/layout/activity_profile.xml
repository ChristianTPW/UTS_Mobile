<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/nim"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="NIM     : 00000032062        "
        android:textColor="@color/thblack"
        android:textSize="15dp"
        android:gravity="left"
        />

    <TextView
        android:id="@+id/nama"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/nim"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Nama  : Christian Teguh P.W."
        android:textColor="@color/thblack"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/kelas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/nama"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Kelas   : DL"
        android:textColor="@color/thblack"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/referensi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/kelas"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Referensi: "
        android:textStyle="bold"
        android:textColor="@color/thblack"
        android:textSize="17dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/referensi"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Bila ada referensi akan saya letakan pada notepad."
        android:textColor="@color/thblack"
        android:textSize="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>